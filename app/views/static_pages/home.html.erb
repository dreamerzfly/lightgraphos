<% provide(:title, 'Home') %>

<% if signed_in? %>
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span12">
        <h1><p>Welcome to</p></h1>
        <p><%= image_tag("CLYQE_logo_vertical_home.png", alt: "CLYQE") %></p>
        <div class="btn-group btn-group-vertical">
          <%= link_to "Search for gear to rent", searchgear_path, class: "btn btn-large btn-success" %>
          <%= link_to "Post gear", postgear_path, class: "btn btn-default btn-success" %>
        </div>
      </div>
    </div>
  </div>

<% else %>
  <div class="jumbotron">
    <div class="container-fluid">
       <h1>A Community Marketplace for Photographers</h1>     
      <p><%= image_tag("CLYQE_logo_vertical_home.png", alt: "CLYQE") %></p>
      <p><%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-success" %></p>
    </div>
  </div>

  <div class="container-fluid">

    <div class="row-fluid">
      <div class="span12">
        <div class="page-header">
        </div>
        <div class="hero-unit">
          <h3>
            Make Money
          </h3>
          <p>
            Do you have too much gear that you don't use all the time?
          </p>
          
          <p>
            Do you want new gear but find it too expensive?
          </p>
          
          <p>
            <%= image_tag("CLYQE_logo_000.png") %> allows you to make money by renting out your gear to other photographers
          </p>
        </div>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span12">
        <div class="page-header">
        </div>
        <div class="hero-unit">
          <h3>
            Save Money
          </h3>
          <p>
            Do you need gear for an assignment or project
          </p>
          
          <p>
            Do you want to rent gear when you travel?
          </p>
          
          <p>
            <%= image_tag("CLYQE_logo_000.png") %> allows you to save money by renting gear from other photographers
          </p>
        </div>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span12">
        <div class="page-header">
        </div>
        <div class="hero-unit">
          <h3>
            Community
          </h3>
          <p>
            Do you want tips on how to take better pictures
          </p>
          
          <p>
            D you need help choosing which camera body or lens to buy?
          </p>
          
          <p>
            <%= image_tag("CLYQE_logo_000.png") %> provides a community where photographers of different experience can help each other
          </p>
        </div>
      </div>
    </div>

  </div>
<% end %>
