<% provide(:title, "Post Gear") %>
<h1>Post Gear</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@gear) do |f| %>

      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :brand %>
      <%= f.select :brand, [ "Canon", "Nikon", "Sigma", "Panasonic", "Leica", "Olympus", "Fujifilm", "Mamiya", "Minolta", "Bower", "GoPro", "Sanyo", "Ricoh", "Pentax", " Lytro" ], :prompt => 'Select Brand'%>

      <%= f.label :component %>
      <%= f.select :component, [ "Body", "Lens", "Accessory" ], :prompt => 'Select Component' %>

      <%= f.label :daily_rental_price %>
      <%= f.text_field :daily_rental_price %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.submit "Post gear now!", class: "btn btn-default btn-success" %>
    <% end %>

  </div>
</div>