<li id="<%= posts_item.id %>">
  <span class="gears">
    <%= link_to posts_item.title, posts_item %>
  </span>
  <% if current_user?(posts_item.user) %>
    <%= link_to "delete", posts_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: posts_item.title %>
  <% end %>
</li>